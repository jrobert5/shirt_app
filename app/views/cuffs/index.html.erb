<div class="page-header">
  <h1>
    Cuffs
    <a href="/cuffs/new" class="btn btn-lg btn-success">New Cuff</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Cuff Name</th>
        <th>Cuff Image</th>
        <th>Actions</th>
      </tr>

      <% @cuffs.each do |cuff| %>
      <tr>
        <td><%= cuff.cuff_name %></td>
        <td><img src="<%= cuff.cuff_image_url %>" style="width:100px;height:100px;"</td>
        <td>
          <a href="/cuffs/<%= cuff.id %>" class="btn btn-primary">Show</a>
          <a href="/cuffs/<%= cuff.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cuff/<%= cuff.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
