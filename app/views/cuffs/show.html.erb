<div class="page-header">
  <h3>Cuff #<%= @cuff.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Cuff name</dt>
      <dd><%= @cuff.cuff_name %></dd>

      <dt>Cuff image</dt>
      <dd><img src = "<%= @cuff.cuff_image_url %>" style="width:200px;height:200px;"> </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/cuffs" class="btn btn-primary">
        Back
      </a>
      <a href="/cuffs/<%= @cuff.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_cuff/<%= @cuff.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
