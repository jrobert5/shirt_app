<div class="page-header">
  <h1>
    Colors
    <a href="/colors/new" class="btn btn-lg btn-success">New Color</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Color name</th>
        <th>Actions</th>
      </tr>

      <% @colors.each do |color| %>
      <tr>
        <td><%= color.color_name %></td>
        <td>
          <a href="/colors/<%= color.id %>" class="btn btn-primary">Show</a>
          <a href="/colors/<%= color.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_color/<%= color.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
