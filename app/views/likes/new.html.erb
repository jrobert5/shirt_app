<!-- Validation failure messages -->
<% if @like.errors.any? %>
  <% @like.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Like</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_like" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for customer_id -->
      <div class="form-group">
        <label for="customer_id" class="control-label">
          Customer
        </label>

        <input type="text" id="customer_id" name="customer_id" placeholder="Customer" class="form-control" value="<%= @like.customer_id %>">
      </div>

      <!-- Label and input for fabric_id -->
      <div class="form-group">
        <label for="fabric_id" class="control-label">
          Fabric
        </label>

        <input type="text" id="fabric_id" name="fabric_id" placeholder="Fabric" class="form-control" value="<%= @like.fabric_id %>">
      </div>

      <button class="btn btn-success">
        Create Like
      </button>
      or
      <a href="/likes">Cancel</a>
    </form>
  </div>
</div>
