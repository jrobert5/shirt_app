<div class="page-header">
  <h1>
    Shirts
    <a href="/shirts/new" class="btn btn-lg btn-success">New Shirt</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Invoice</th>
        <th>Fabric</th>
        <th>Collar</th>
        <th>Cuff</th>
        <th>Actions</th>
      </tr>

      <% @shirts.each do |shirt| %>
      <tr>
        <td><%= shirt.invoice_id %></td>
        <td><%= shirt.fabric_id %></td>
        <td><%= shirt.collar_id %></td>
        <td><%= shirt.cuff_id %></td>
        <td>
          <a href="/shirts/<%= shirt.id %>" class="btn btn-primary">Show</a>
          <a href="/shirts/<%= shirt.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_shirt/<%= shirt.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
