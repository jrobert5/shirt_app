<div class="page-header">
  <h3>Customer Profile</h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">

    <div class="btn-group btn-group-justified">
      <a href="/customers" class="btn btn-primary">
        Back
      </a>
      <a href="/customers/<%= @customer.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_customer/<%= @customer.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>

    <br>
    <dl class="dl-horizontal">

      <dt>First Name</dt>
      <dd><%= @customer.first_name %></dd>

      <dt>Last Name</dt>
      <dd><%= @customer.last_name %></dd>

      <dt>Email</dt>
      <dd><%= @customer.email %></dd>

      <br>
      <dt>Orders</dt>
      <% @invoices.each do |invoice| %>

      <dd>
        <a href="/invoices/<%= invoice.id %>">INV#<%= invoice.id %></a>
      </dd>
      <% end %>

      <dd>

        <form action="/create_invoice" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for status -->
          <div class="form-group">
            <input type="hidden" id="customer_id" name="customer_id" class="form-control" value="<%= @customer.id %>">
          </div>
          <div class="form-group">
            <input type="hidden" id="status" name="status" class="form-control" value="Created">
          </div>

          <button class="btn btn-success">
            New Order
          </button>
                  </form>




      </dd>
      <br>
      <dt>Measurements</dt>
      <% @customer_measurements.each do |customer_measurement| %>

      <dd>
        <a href="/customer_measurements/<%= customer_measurement.id %>"><%= customer_measurement.created_at.strftime('%D') %></a>
      </dd>
      <% end %>



    </dl>


    <form action="/create_customer_measurement" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for customer_id -->
      <div class="form-group">


        <label for="customer_id" class="control-label">
          New Customer Measurements
        </label>

        <input type="hidden" id="customer_id" name="customer_id" placeholder="Customer" class="form-control" value = "<%=  @customer.id %>">
      </div>


      <table class="table table-striped table-hover">
        <tr>

          <th>Neck</th>
          <th>Chest</th>
          <th>Stomach</th>
          <th>Seat</th>
          <th>Shirt length</th>
          <th>Shoulder width</th>
          <th>Right sleeve</th>
          <th>Left sleeve</th>
          <th>Right bicep</th>
          <th>Left bicep</th>
          <th>Right cuff</th>
          <th>Left cuff</th>

        </tr>
        <tr>

          <!-- Label and input for neck -->
          <td>
            <div class="form-group">
              <!-- <label for="neck" class="control-label">
              Neck
            </label> -->

            <input type="text" id="neck" name="neck" placeholder="Neck" class="form-control" >
          </div>
        </td>



        <td>
          <!-- Label and input for chest -->
          <div class="form-group">
            <!-- <label for="chest" class="control-label">
            Chest
          </label> -->

          <input type="text" id="chest" name="chest" placeholder="Chest" class="form-control">
        </div>
      </td>



      <td>
        <!-- Label and input for stomach -->
        <div class="form-group">
          <!-- <label for="stomach" class="control-label">
          Stomach
        </label> -->

        <input type="text" id="stomach" name="stomach" placeholder="Stomach" class="form-control">
      </div>
    </td>

    <td>

      <!-- Label and input for seat -->
      <div class="form-group">
        <!-- <label for="seat" class="control-label">
        Seat
      </label> -->

      <input type="text" id="seat" name="seat" placeholder="Seat" class="form-control">
    </div>
  </td>

  <td>
    <!-- Label and input for shirt_length -->
    <div class="form-group">
      <!-- <label for="shirt_length" class="control-label">
      Shirt length
    </label> -->

    <input type="text" id="shirt_length" name="shirt_length" placeholder="Shirt length" class="form-control">
  </div>
</td>



<td>
  <!-- Label and input for shoulder_width -->
  <div class="form-group">
    <!-- <label for="shoulder_width" class="control-label">
    Shoulder width
  </label> -->

  <input type="text" id="shoulder_width" name="shoulder_width" placeholder="Shoulder width" class="form-control">
</div>
</td>



<td>
  <!-- Label and input for right_sleeve -->
  <div class="form-group">
    <!-- <label for="right_sleeve" class="control-label">
    Right sleeve
  </label> -->

  <input type="text" id="right_sleeve" name="right_sleeve" placeholder="Right sleeve" class="form-control">
</div>
</td>
<td>

  <!-- Label and input for left_sleeve -->
  <div class="form-group">
    <!-- <label for="left_sleeve" class="control-label">
    Left sleeve
  </label> -->

  <input type="text" id="left_sleeve" name="left_sleeve" placeholder="Left sleeve" class="form-control">
</div>
</td>
<td>

  <!-- Label and input for right_bicep -->
  <div class="form-group">
    <!-- <label for="right_bicep" class="control-label">
    Right bicep
  </label> -->

  <input type="text" id="right_bicep" name="right_bicep" placeholder="Right bicep" class="form-control">
</div>
</td>
<td>

  <!-- Label and input for left_bicep -->
  <div class="form-group">
    <!-- <label for="left_bicep" class="control-label">
    Left bicep
  </label> -->

  <input type="text" id="left_bicep" name="left_bicep" placeholder="Left bicep" class="form-control">
</div>
</td>
<td>

  <!-- Label and input for right_cuff -->
  <div class="form-group">
    <!-- <label for="right_cuff" class="control-label">
    Right cuff
  </label> -->

  <input type="text" id="right_cuff" name="right_cuff" placeholder="Right cuff" class="form-control">
</div>
</td>

<td>
  <!-- Label and input for left_cuff -->
  <div class="form-group">
    <!-- <label for="left_cuff" class="control-label">
    Left cuff
  </label> -->

  <input type="text" id="left_cuff" name="left_cuff" placeholder="Left cuff" class="form-control">
</div>
</td>
</tr>
</table>


<button class="btn btn-success">
  Create Customer Measurement
</button>
or
<a href="/customer_measurements">Cancel</a>
</form>



</div>
</div>
