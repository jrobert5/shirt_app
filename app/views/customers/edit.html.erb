      </div>

      <!-- Label and input for left_cuff -->
      <div class="form-group">
        <label for="left_cuff" class="control-label">
          Left cuff
        </label>

        <input type="text" id="left_cuff" name="left_cuff" placeholder="Left cuff" class="form-control" value="<%= @customer_measurement.left_cuff %>">
      </div>

      <button class="btn btn-warning">
        Update Customer Measurement
      </button>
      or
      <a href="/customer_measurements/<%= @customer_measurement.id %>">Cancel</a>
    </form>
  </div>
</div>
