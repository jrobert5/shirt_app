<!-- Validation failure messages -->
<% if @customer_measurement.errors.any? %>
  <% @customer_measurement.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Customer Measurement #<%= @customer_measurement.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_customer_measurement/<%= @customer_measurement.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for customer_id -->
      <div class="form-group">
        <label for="customer_id" class="control-label">
          Customer
        </label>

        <input type="text" id="customer_id" name="customer_id" placeholder="Customer" class="form-control" value="<%= @customer_measurement.customer_id %>">
      </div>

      <!-- Label and input for neck -->
      <div class="form-group">
        <label for="neck" class="control-label">
          Neck
        </label>

        <input type="text" id="neck" name="neck" placeholder="Neck" class="form-control" value="<%= @customer_measurement.neck %>">
      </div>

      <!-- Label and input for chest -->
      <div class="form-group">
        <label for="chest" class="control-label">
          Chest
        </label>

        <input type="text" id="chest" name="chest" placeholder="Chest" class="form-control" value="<%= @customer_measurement.chest %>">
      </div>

      <!-- Label and input for stomach -->
      <div class="form-group">
        <label for="stomach" class="control-label">
          Stomach
        </label>

        <input type="text" id="stomach" name="stomach" placeholder="Stomach" class="form-control" value="<%= @customer_measurement.stomach %>">
      </div>

      <!-- Label and input for seat -->
      <div class="form-group">
        <label for="seat" class="control-label">
          Seat
        </label>

        <input type="text" id="seat" name="seat" placeholder="Seat" class="form-control" value="<%= @customer_measurement.seat %>">
      </div>

      <!-- Label and input for shirt_length -->
      <div class="form-group">
        <label for="shirt_length" class="control-label">
          Shirt length
        </label>

        <input type="text" id="shirt_length" name="shirt_length" placeholder="Shirt length" class="form-control" value="<%= @customer_measurement.shirt_length %>">
      </div>

      <!-- Label and input for shoulder_width -->
      <div class="form-group">
        <label for="shoulder_width" class="control-label">
          Shoulder width
