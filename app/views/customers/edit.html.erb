        <input type="text" id="right_sleeve" name="right_sleeve" placeholder="Right sleeve" class="form-control" value="<%= @customer_measurement.right_sleeve %>">
      </div>

      <!-- Label and input for left_sleeve -->
      <div class="form-group">
        <label for="left_sleeve" class="control-label">
          Left sleeve
        </label>

        <input type="text" id="left_sleeve" name="left_sleeve" placeholder="Left sleeve" class="form-control" value="<%= @customer_measurement.left_sleeve %>">
      </div>

      <!-- Label and input for right_bicep -->
      <div class="form-group">
        <label for="right_bicep" class="control-label">
          Right bicep
        </label>

        <input type="text" id="right_bicep" name="right_bicep" placeholder="Right bicep" class="form-control" value="<%= @customer_measurement.right_bicep %>">
      </div>

      <!-- Label and input for left_bicep -->
