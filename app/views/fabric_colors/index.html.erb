<div class="page-header">
  <h1>
    Fabric Colors

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Fabric</th>
        <th>Image</th>
        <th>Color</th>
        <th>Actions</th>
      </tr>

      <% @fabric_colors.each do |fabric_color| %>
      <tr>
        <td><%= fabric_color.fabric.fabric_code %></td>
        <td><img src ="<%= fabric_color.fabric.fabric_image_url %>" style = "width:50px;height:50px;"</td>
        <td><%= fabric_color.color.color_name %></td>
        <td>
          <a href="/fabric_colors/<%= fabric_color.id %>" class="btn btn-primary">Show</a>
          <a href="/fabric_colors/<%= fabric_color.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_fabric_color/<%= fabric_color.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
