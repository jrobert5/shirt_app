<!-- Validation failure messages -->
<% if @invoice.errors.any? %>
  <% @invoice.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Invoice #<%= @invoice.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_invoice/<%= @invoice.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for customer_id -->
      <div class="form-group">
        <label for="customer_id" class="control-label">
          Customer
        </label>

        <input type="text" id="customer_id" name="customer_id" placeholder="Customer" class="form-control" value="<%= @invoice.customer_id %>">
      </div>

      <!-- Label and input for status -->
      <div class="form-group">
        <label for="status" class="control-label">
          Status
        </label>

        <%= select_tag "status", "<option>Created</option><option>Ordered</option><option>Shipped</option>".html_safe %>
      </div>

      <button class="btn btn-warning">
        Update Invoice
      </button>
      or
      <a href="/invoices/<%= @invoice.id %>">Cancel</a>
    </form>
  </div>
</div>
