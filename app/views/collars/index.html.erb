<div class="page-header">
  <h1>
    Collars
    <a href="/collars/new" class="btn btn-lg btn-success">New Collar</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Collar name</th>
        <th>Collar image url</th>
        <th>Actions</th>
      </tr>

      <% @collars.each do |collar| %>
      <tr>
        <td><%= collar.collar_name %></td>
        <td><img src="<%= collar.collar_image_url %>" style="width:200px;height:200px;"></td>
        <td>
          <a href="/collars/<%= collar.id %>" class="btn btn-primary">Show</a>
          <a href="/collars/<%= collar.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_collar/<%= collar.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
