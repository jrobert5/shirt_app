<div class="page-header">
  <h1>
    Measurements
    <a href="/customer_measurements/new" class="btn btn-lg btn-success">New measurement</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Customer</th>
        <th>Neck</th>
        <th>Chest</th>
        <th>Stomach</th>
        <th>Seat</th>
        <th>Shirt length</th>
        <th>Shoulder width</th>
        <th>Right sleeve</th>
        <th>Left sleeve</th>
        <th>Right bicep</th>
        <th>Left bicep</th>
        <th>Right cuff</th>
        <th>Left cuff</th>
        <th>Actions</th>
      </tr>

      <% @customer_measurements.each do |customer_measurement| %>
      <tr>
        <td><%= customer_measurement.customer.email %></td>
        <td><%= customer_measurement.neck %></td>
        <td><%= customer_measurement.chest %></td>
        <td><%= customer_measurement.stomach %></td>
        <td><%= customer_measurement.seat %></td>
        <td><%= customer_measurement.shirt_length %></td>
        <td><%= customer_measurement.shoulder_width %></td>
        <td><%= customer_measurement.right_sleeve %></td>
        <td><%= customer_measurement.left_sleeve %></td>
        <td><%= customer_measurement.right_bicep %></td>
        <td><%= customer_measurement.left_bicep %></td>
        <td><%= customer_measurement.right_cuff %></td>
        <td><%= customer_measurement.left_cuff %></td>
        <td>
          <a href="/customer_measurements/<%= customer_measurement.id %>" class="btn btn-primary">Show</a>
          <a href="/customer_measurements/<%= customer_measurement.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_customer_measurement/<%= customer_measurement.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
