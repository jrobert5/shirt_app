<!-- Validation failure messages -->
<% if @fabric.errors.any? %>
  <% @fabric.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Fabric #<%= @fabric.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_fabric/<%= @fabric.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for fabric_code -->
      <div class="form-group">
        <label for="fabric_code" class="control-label">
          Fabric code
        </label>

        <input type="text" id="fabric_code" name="fabric_code" placeholder="Fabric code" class="form-control" value="<%= @fabric.fabric_code %>">
      </div>

      <!-- Label and input for fabric_desciption -->
      <div class="form-group">
        <label for="fabric_desciption" class="control-label">
          Fabric desciption
        </label>

        <input type="text" id="fabric_desciption" name="fabric_desciption" placeholder="Fabric desciption" class="form-control" value="<%= @fabric.fabric_desciption %>">
      </div>

      <!-- Label and input for fabric_image_url -->
      <div class="form-group">
        <label for="fabric_image_url" class="control-label">
          Fabric image url
        </label>

        <input type="text" id="fabric_image_url" name="fabric_image_url" placeholder="Fabric image url" class="form-control" value="<%= @fabric.fabric_image_url %>">
      </div>

      <button class="btn btn-warning">
        Update Fabric
      </button>
      or
      <a href="/fabrics/<%= @fabric.id %>">Cancel</a>
    </form>
  </div>
</div>
